<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_compra"
    android:theme="@style/AppBaseTheme"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_gravity="center"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:clickable="false"
    android:longClickable="false"
    card_view:cardBackgroundColor="@color/text_circle"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:clickable="false"
        android:longClickable="false"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="4dp">

            <ImageView
                android:id="@+id/contact_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="image_contact" />

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:textSize="16sp"
                android:text="Nombre"
                tools:ignore="RtlHardcoded" />

            <TextView
                android:id="@+id/group_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|left"
                android:layout_below="@id/group_name"
                android:textStyle="italic"
                android:textSize="12sp"
                android:text="Comentario"
                tools:ignore="RtlHardcoded" />

            <ImageView
                android:id="@+id/image_phone"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/group_comment"
                android:padding="2dp"
                android:src="@drawable/group" />

            <TextView
                android:id="@+id/group_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image_phone"
                android:gravity="left|center_vertical"
                android:textSize="12sp"
                android:text="Propietario"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/group_comment"
                android:padding="2dp"
                tools:ignore="RtlHardcoded" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>